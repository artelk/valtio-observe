{
  "name": "valtio-observe",
  "description": "const v = useObserve(() => state.x + otherState.y);",
  "version": "1.2.1",
  "type": "module",
  "author": "Artem Elkin",
  "repository": {
    "type": "git",
    "url": "https://github.com/artelk/valtio-observe.git"
  },
  "source": "./src/index.ts",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      },
      "default": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./*": {
      "require": {
        "types": "./dist/cjs/*.d.ts",
        "default": "./dist/cjs/*.js"
      },
      "default": {
        "types": "./dist/*.d.ts",
        "default": "./dist/*.js"
      }
    }
  },
  "sideEffects": false,
  "files": [
    "src",
    "dist"
  ],
  "packageManager": "pnpm@9.4.0",
  "scripts": {
    "compile": "rm -rf dist && pnpm run '/^compile:.*/'",
    "compile:esm": "tsc -p tsconfig.esm.json",
    "compile:cjs": "tsc -p tsconfig.cjs.json && echo '{\"type\":\"commonjs\"}' > dist/cjs/package.json",
    "test": "pnpm run '/^test:.*/'",
    "test:format": "prettier -c .",
    "test:lint": "eslint .",
    "test:types": "tsc -p . --noEmit",
    "test:types:examples": "tsc -p examples --noEmit",
    "test:spec": "vitest run",
    "example:01": "npx tsx ./examples/01_observe/index.ts",
    "example:02": "vite ./examples/02_useObserve"
  },
  "keywords": [
    "react",
    "valtio",
    "state",
    "manager",
    "store",
    "reactive",
    "observe"
  ],
  "license": "MIT",
  "prettier": {
    "singleQuote": true
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.10.10",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "eslint": "9.19.0",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-compiler": "19.0.0-beta-decd7b8-20250118",
    "eslint-plugin-react-hooks": "5.2.0-canary-de1eaa26-20250124",
    "happy-dom": "^16.7.2",
    "prettier": "^3.4.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "ts-expect": "^1.3.0",
    "ts-toolbelt": "^9.6.0",
    "tsx": "latest",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.21.0",
    "valtio": "^2.1.2",
    "valtio-observe": "file:",
    "vite": "^6.0.11",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.4"
  },
  "peerDependencies": {
    "valtio": ">=2.0.0"
  }
}
